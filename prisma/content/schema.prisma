generator client {
  provider      = "prisma-client-js"
  output        = "../../node_modules/@prisma/client-content"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_CONTENT_URL")
}

model Topic {
  id        String       @id @default(cuid())
  name      String       @unique // Normalized name (lowercase)
  aliases   Alias[]
  articles  WikiArticle[]
  shipLogs  ShipLog[]
  tags      Tag[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Tag {
  id     String  @id @default(cuid())
  name   String  @unique
  topics Topic[]
}


model Alias {
  id        String   @id @default(cuid())
  name      String   @unique
  topicId   String
  topic     Topic    @relation(fields: [topicId], references: [id])
  createdAt DateTime @default(now())
}


model User {
  id          String        @id
  shipLogs    ShipLog[]
  chatHistory ChatHistory[]
}

model ChatHistory {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      String   // 'user' | 'assistant'
  content   String   @db.Text
  createdAt DateTime @default(now())
}


model ShipLog {
  id           String   @id @default(cuid())
  userId       String   // Reference to Main DB User
  user         User     @relation(fields: [userId], references: [id])
  topicId      String
  topic        Topic    @relation(fields: [topicId], references: [id])
  discoveredAt DateTime @default(now())

  @@unique([userId, topicId])
}

model WikiArticle {
  id        String   @id @default(cuid())
  topicId   String
  topic     Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
  title     String?  // Localized Title
  content   String?  @db.Text // Optional: Can be null if only title is translated (Lazy Loading)
  language  String   @default("en")
  updatedAt DateTime @updatedAt
  
  @@unique([topicId, language])
}
